<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?colorSurface"
    tools:context=".VARTHFxActivity">
    <include
        android:id="@+id/topbarother"
        layout="@layout/topbarother"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_collapseMode="pin"
        android:fitsSystemWindows="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="?colorSurface"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:background="?colorSurface"
                android:gravity="bottom"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/audio_settings"
                    android:textSize="16sp" />
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:contentPadding="8dp"
                    app:cardBackgroundColor="?colorOnSurfaceInverse"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutline">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:orientation="vertical">
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/sw_dolby"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dolby"
                            android:textSize="14sp" />
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loudness"
                            android:textSize="14sp" />
                        <com.google.android.material.slider.Slider
                            android:id="@+id/seek_loudness"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:stepSize="1"
                            android:value="0"
                            android:valueFrom="0"
                            android:valueTo="2000" />
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bass"
                            android:textSize="14sp" />
                        <com.google.android.material.slider.Slider
                            android:id="@+id/seek_bass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:stepSize="1"
                            android:value="0"
                            android:valueFrom="0"
                            android:valueTo="2000" />
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Virtualizer"
                            android:textSize="12sp" />
                        <com.google.android.material.slider.Slider
                            android:id="@+id/seek_virtualizer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:stepSize="1"
                            android:value="0"
                            android:valueFrom="0"
                            android:valueTo="2000" />
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/sw_eq_enabled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Equalizer"
                            android:textSize="14sp" />
                        <Spinner
                            android:id="@+id/sp_eq_presets"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dropdown" />
                        <LinearLayout
                            android:id="@+id/eq_bands_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:orientation="vertical" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>
</LinearLayout>